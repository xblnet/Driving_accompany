version: "3.9"

services:

  app:
    image: xblcn/driving_accompany_app
    restart: always
    expose:
      - "5000"
    deploy:
      mode: replicated
      replicas: 3

  nginx:
    image: xblcn/driving_accompany_nginx
    restart: always
    ports:
      - "80:80"
    deploy:
      mode: replicated
      replicas: 3